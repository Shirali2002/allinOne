    <!-- ++++++++++++++++++++++++++Currency+++++++++++++++++++++++++++++ -->

    <insert id="insertCurrency" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO allinonedb.tb_currency (CURRENCY_CODE, NAME)
        VALUES (#{currencyCode},
                #{name, jdbcType=NVARCHAR});
    </insert>

    <insert id="insertCurrencies" parameterType="java.util.List" useGeneratedKeys="true">
        INSERT INTO allinonedb.tb_currency (CURRENCY_CODE, NAME)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.currencyCode},
            #{item.name, jdbcType=NVARCHAR})
        </foreach>
    </insert>

    <delete id="truncateCurrencies">
        TRUNCATE TABLE allinonedb.tb_currency;
    </delete>

    <select id="findAllCurrency" resultType="Currency">
        SELECT <include refid="currencyBaseColumns"/>
        FROM allinonedb.tb_currency cu;
    </select>

    <sql id="currencyBaseColumns">
        cu.id,
        cu.currency_code,
        cu.name
    </sql>

