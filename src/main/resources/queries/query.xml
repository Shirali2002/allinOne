    <entry key="allinone.query.saveAds">
        <![CDATA[
            INSERT
              INTO tb_ads(
                   ads_link,
                   destination,
                   engine_horse_power,
                   engine_power,
                   image_link,
                   number_of_seats,
                   price,
                   ttl,
                   used,
                   year,
                   ban_type_id,
                   city_id,
                   colour_id,
                   currency_id,
                   dest_id,
                   fuel_type_id,
                   gear_box_type_id,
                   gear_type_id,
                   model_id)
            VALUES (:linkAds,
                   :destination,
                   :horsePower,
                   :enginePower,
                   :imangeLink,
                   :numberOfSeats,
                   :price,
                   :ttl,
                   :used,
                   :year,
                   :banTypeId,
                   :cityId,
                   :colourId,
                   :currencyId,
                   :destMeasureId,
                   :fuelTypeId,
                   :gearBoxTypeId,
                   :gearTypeId,
                   :modelId);
        ]]>
    </entry>

    <entry key="allinone.query.saveUser">
