            INSERT
              INTO tb_user
                   (email,
                   enabled,
                   name,
                   otp,
                   password,
                   reset_enabled,
                   reset_password_token,
                   surname)
            VALUES (:email,
                   :enabled,
                   :name,
                   :otp,
                   :password,
                   :resetEnabled,
                   :resetToken,
                   :surname);
        ]]>
    </entry>

    <entry key="allinone.query.findAllAds">
        <![CDATA[
            SELECT *
              FROM tb_ads;
        ]]>
    </entry>

    <entry key="allinone.query.findAllAdsPageByPage">
        <![CDATA[
            SELECT ads_link,
                   destination,
                   engine_horse_power,
                   engine_power,
                   image_link,
                   number_of_seats,
                   price,
                   ttl,
                   used,
                   year,
                   ban_type_id as ban_type_code,
                   city_id as city_code,
                   colour_id as colour_code,
                   currency_id as currency_code,
                   dest_id as destination_measure_code,
                   fuel_type_id as fuel_type_code,
                   gear_box_type_id as gear_box_type_code,
                   gear_type_id as gear_type_code,
                   model_id as model_code
              FROM tb_ads
             ORDER
                BY ttl
              DESC
             LIMIT :limit
            OFFSET :from;
        ]]>
    </entry>

