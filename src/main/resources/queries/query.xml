    <entry key="allinone.query.updateUserByEmail">
        <![CDATA[
            UPDATE tb_user
               SET name = :name,
                   enabled = :enabled,
                   otp = :otp,
                   password = :password,
                   reset_enabled = :resetEnabled,
                   reset_password_token = :resetToken,
                   surname = :surname
             WHERE email = :email;
        ]]>
    </entry>

