    <comment>All In One Queries</comment>

    <entry key="allinone.query.saveCurrency">
        <![CDATA[
            INSERT
              INTO tb_currency
                   (currency_code,
                   name)
            VALUES (:code,
                   :name);
        ]]>
    </entry>

